# ============================================
# SSL Monitor - Environment Configuration Template
# Copy this file to .env and fill with your values
# NEVER COMMIT .env TO GIT!
# ============================================

# ============================================
# Domain Configuration
# ============================================
DOMAIN=mona.namestar.com
ENVIRONMENT=production
TZ=UTC

# ============================================
# Database Configuration
# ============================================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=ssl_monitor
DB_USER=ssluser
DB_PASSWORD=CHANGE_ME_SECURE_PASSWORD_MIN_12_CHARS
POSTGRES_INITDB_ARGS=--encoding=UTF8

# ============================================
# Backend Configuration
# ============================================
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8080
BACKEND_WORKERS=4
BACKEND_LOG_LEVEL=info
LOG_LEVEL=info
LOG_FORMAT=json

# ============================================
# Database Pool Configuration
# ============================================
DB_POOL_SIZE=20
DB_POOL_MAX_OVERFLOW=10
DB_ECHO=false

# ============================================
# Security - JWT Configuration
# ============================================
# Generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_ME_SECURE_JWT_SECRET_MIN_32_CHARS
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ============================================
# CORS Configuration
# ============================================
CORS_ORIGINS=https://mona.namestar.com,https://www.mona.namestar.com
ALLOW_CREDENTIALS=true

# ============================================
# Nginx Configuration
# ============================================
NGINX_PORT=80
NGINX_HTTPS_PORT=443
SSL_ENABLED=false

# ============================================
# Scanner Configuration
# ============================================
SCANNER_CONCURRENCY=20
SCANNER_TIMEOUT=15
SCANNER_RETRY=3
SCANNER_BATCH_SIZE=1000
SCANNER_VERIFY_SSL=false

# ============================================
# Logging & Monitoring
# ============================================
LOG_RETENTION_DAYS=30
AUDIT_LOG_ENABLED=true
ENABLE_METRICS=true

# ============================================
# Caching Configuration
# ============================================
ENABLE_CACHING=false
CACHE_TTL_SECONDS=300

# ============================================
# Email Configuration (Optional)
# ============================================
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@mona.namestar.com

# ============================================
# Slack Webhook (Optional)
# ============================================
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# ============================================
# Alert Configuration (Optional)
# ============================================
# ALERT_CERT_EXPIRY_DAYS=30
# ALERT_WEAK_CIPHER=true
# ALERT_REVOKED_CERT=true